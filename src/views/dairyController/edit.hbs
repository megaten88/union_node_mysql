<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card" >
                <div class="card-body">
                    <form action="/dairy/edit/{{dairy.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{dairy.name}}"class="form-control" name="name" placeholder="Dairy Product Name" id="dairyName" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{dairy.price}}" step="0.01" class="form-control" name="price" placeholder="Dairy Product Price" id="dairyPrice">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>