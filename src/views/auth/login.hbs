<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto m-5">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Login User</h3>
                </div>
                <div class="card-body">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="username" placeholder="Provide unique username" id="username">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="user_password" placeholder="Provide user password" id="user_password">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>